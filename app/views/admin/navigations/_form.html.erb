<%= form_with(model: admin_navigation, local: true, url: admin_navigations_path) do |form| %>
  <% if admin_navigation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_navigation.errors.count, "error") %> prohibited this admin_navigation from being saved:</h2>

      <ul>
      <% admin_navigation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, 'Lehe nimi menüüs' %>
    <span id="menu-element">(maksimaalselt kahesõnaline)</span>
    <%= form.text_field :name, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :path, 'Sisuleht' %>
    <%= form.select :path, options_for_select(admin_navigation.available_paths.map { |p| [p[:name], p[:path]] }), {}, {required: 'true', autofocus: 'true', :class => 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvesta', :class => 'btn btn-save' %>
  </div>
<% end %>
