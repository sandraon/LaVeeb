<%= form_with(model: [:admin, @news], local: true) do |form| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
      <div class="field form-group">
          <%= form.label :heading, 'Pealkiri' %>
          <%= form.text_field :heading, :class => 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= form.label :content, 'Sisu' %>
          <%= form.text_area :content, :class => 'form-control', :id => 'summernote' %>
          <script>
            $('#summernote').summernote({
              tabsize: 2,
              height: 400
            });
          </script>
        </div>
      
        <div class="actions">
          <%= form.submit 'Salvesta', :class => 'btn btn-save' %>
        </div>
  </div>
  
<% end %>
