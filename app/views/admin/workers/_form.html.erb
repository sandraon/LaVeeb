      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="field form-group">
        <%= form.label :name, 'Nimi' %>
        <%= form.text_field :name, :class => 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= form.label :jobtitle, 'Ametikoht' %>
        <%= form.text_field :jobtitle, :class => 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= form.label :epost, 'E-posti aadress' %>
        <%= form.text_field :epost, :class => 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= form.label :number, 'Telefoninumber' %>
        <%= form.text_field :number, :class => 'form-control' %>
      </div>
    
      <div class="field">
        <%= form.label :info, 'Lisainfo (nt vastuvÃµtuaeg vms)' %>
        <%= form.text_area :info, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-sm-6">
        <div class="field form-group">
          <label class="btn btn-add">
            Lisa foto
            <span style="display:none"><%= form.file_field :foto, id: "foto-upload" %></span>
          </label>
            <%= form.hidden_field :foto_cache %>
          <br>
          <%= image_tag(@worker.foto_url(:thumb)) if @worker.foto? %>
          <div class="form-check">
            <label class="form-check-label">
